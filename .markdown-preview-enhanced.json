{
  "mermaid-js-path": "https://cdn.jsdelivr.net/npm/mermaid@11.6.0/dist/mermaid.min.js",
  "mermaidTheme": "default",
  "mermaidConfig": {
    "theme": "default",
    "themeVariables": {
      "primaryColor": "#ff6b6b",
      "primaryTextColor": "#fff",
      "primaryBorderColor": "#ff6b6b",
      "lineColor": "#333",
      "sectionBkgColor": "#fff",
      "altSectionBkgColor": "#f8f9fa",
      "gridColor": "#e1e5e9",
      "secondaryColor": "#4ecdc4",
      "tertiaryColor": "#ffe66d"
    },
    "flowchart": {
      "htmlLabels": true,
      "curve": "basis"
    },
    "sequence": {
      "diagramMarginX": 50,
      "diagramMarginY": 10,
      "actorMargin": 50,
      "width": 150,
      "height": 65,
      "boxMargin": 10,
      "boxTextMargin": 5,
      "noteMargin": 10,
      "messageMargin": 35,
      "mirrorActors": true,
      "bottomMarginAdj": 1,
      "useMaxWidth": true
    },
    "gantt": {
      "titleTopMargin": 25,
      "barHeight": 20,
      "fontFamily": "\"trebuchet ms\", verdana, arial",
      "fontSize": 11,
      "fontWeight": "normal",
      "gridLineStartPadding": 35,
      "bottomPadding": 5,
      "leftPadding": 75,
      "topPadding": 50,
      "rightPadding": 75
    }
  }
}