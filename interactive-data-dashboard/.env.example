# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
STREAMLIT_SERVER_HEADLESS=false
STREAMLIT_SERVER_RUN_ON_SAVE=true
STREAMLIT_SERVER_FILE_WATCHER_TYPE=auto

# Application Configuration
APP_TITLE="Interactive Data Dashboard"
APP_DESCRIPTION="Data visualization dashboard built with Streamlit, Pandas, and Plotly"
APP_VERSION=1.0.0
APP_DEBUG=false

# Data Configuration
MAX_UPLOAD_SIZE_MB=200
DATA_CACHE_TTL_SECONDS=3600
MAX_DATA_POINTS=10000
DATA_SAMPLE_SIZE=1000

# Chart Configuration
DEFAULT_THEME=plotly_white
CHART_HEIGHT=500
CHART_WIDTH=700
CHART_CACHE_TTL=1800

# Performance Configuration
ENABLE_CACHING=true
CACHE_TYPE=memory
MAX_CACHE_SIZE_MB=500
ENABLE_COMPRESSION=true

# UI Configuration
SIDEBAR_STATE=expanded
LAYOUT=wide
INITIAL_SIDEBAR_STATE=expanded

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_FILE=logs/dashboard.log
ENABLE_FILE_LOGGING=false

# Security Configuration
ENABLE_CORS=true
ALLOWED_ORIGINS=*
MAX_REQUEST_SIZE_MB=250

# Database Configuration (if using database)
# DATABASE_URL=sqlite:///dashboard.db
# DATABASE_POOL_SIZE=5
# DATABASE_TIMEOUT=30

# External APIs (if integrating with external services)
# API_KEY=your_api_key_here
# API_BASE_URL=https://api.example.com
# API_TIMEOUT=30

# Development Configuration
DEV_MODE=false
HOT_RELOAD=true
DEBUG_TOOLBAR=false

# Production Configuration
PROD_MODE=false
ENABLE_ANALYTICS=false
ANALYTICS_ID=

# File Storage Configuration
UPLOAD_FOLDER=uploads/
TEMP_FOLDER=temp/
STATIC_FOLDER=static/
MAX_FILE_AGE_HOURS=24

# Chart Export Configuration
EXPORT_FORMAT=png
EXPORT_DPI=300
EXPORT_WIDTH=1200
EXPORT_HEIGHT=800

# Memory Management
GC_THRESHOLD=100
MEMORY_LIMIT_MB=1000
CLEANUP_INTERVAL_MINUTES=30

# Feature Flags
ENABLE_ADVANCED_CHARTS=true
ENABLE_DATA_EXPORT=true
ENABLE_REAL_TIME_UPDATES=false
ENABLE_USER_PREFERENCES=true

# Internationalization
DEFAULT_LANGUAGE=zh-CN
SUPPORTED_LANGUAGES=zh-CN,en-US

# Error Handling
SHOW_ERROR_DETAILS=false
ERROR_REPORTING=false
ERROR_REPORT_URL=

# Backup Configuration
ENABLE_AUTO_BACKUP=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
BACKUP_LOCATION=backups/